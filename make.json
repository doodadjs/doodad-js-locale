	"version": "5.0.0",
	"stage": "b",
	"dependencies": [
		{
			"name": "@doodad-js/core",
			"client": true,
			"server": true,
			"browserify": true
		},
		{
			"name": "@doodad-js/unicode",
			"client": true,
			"server": true,
			"browserify": true
		}
	],
	"modules": [
		{
			"src": "common/Tools_Locale.js",
			"client": true,
			"server": true,
			"browserify": true
		},
		{
			"src": "common/Tools_Locale_Resources.js",
			"client": true,
			"server": true,
			"browserify": true
		},
		{
			"src": "common/Tools_Locale_Unicode.js",
			"client": true,
			"server": true,
			"browserify": true
		}
	],
	"resources": [
		{
			"name": "Doodad.Tools.Locale/Resources",
			"namespace": "Doodad.Tools.Locale",
			"sourceBase": "%PACKAGEDIR%/",
			"source": "./locales",
			"client": true,
			"server": true,
			"browserify": true,
			"filter": "^(en_.*[.]json|fr_.*[.]json)$"
		}
	],
	"tasks": {
		"locales": {
			"operations": [
				{
					"class": "Make.Modules.Load",
					"files": [
						{
							"module": "@doodad-js/unicode"
						},
						{
							"module": "@doodad-js/locale",
							"path": "src/make/Tools_Locale_Make.js"
						}
					]
				},
				
				{
					"class": "Make.Folder.Create",
					"destination": "%PACKAGEDIR%/locales"
				},
				{
					"class": "Make.File.Copy",
					"source": "%SOURCEDIR%/common/res/locales/LICENSE",
					"destination": "%PACKAGEDIR%/locales/LICENSE"
				},
				{
					"class": "Doodad.Tools.Locale.Make.Database",
					"source": "%SOURCEDIR%/common/res/locales",
					"destination": "%PACKAGEDIR%/locales"
				}
			]
		},
		"make": {
			"operations": [
				{
					"class": "Make.Generate.Package"
				},
				
				{
					"class": "Make.Task",
					"name": "install"
				},
				{
					"class": "Make.Task",
					"name": "browserify"
				},
				{
					"class": "Make.Task",
					"name": "webpack"
				}
			]
		},
		"install": {
			"operations": [
				{
					"class": "Make.Generate.Package"
				}
			]
		},
		"browserify": {
			"operations": [
				{
					"class": "Make.Generate.Package"
				}
			]
		},
		"webpack": {
			"operations": [
				{
					"class": "Make.Generate.Package"
				}
			]
		}
	}
}